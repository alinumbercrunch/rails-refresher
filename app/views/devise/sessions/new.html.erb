
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card">
  <div class="card-header">
    <h2>Log in</h2>
  </div>
  <div class="card-body">
      <div class="field">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-select" %>
  </div>

  <div class="field">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-select" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me, class:"form-label" %>
    </div>
  </div>
  </div>


  <% end %>


  <div class="container d-flex justify-content-start px-0">
   <div class="actions">
    <%= f.submit "Log in", class:"btn btn-dark m-1" %>
  </div>
  <%= render "devise/shared/links" %>
</div>

<% end %>
